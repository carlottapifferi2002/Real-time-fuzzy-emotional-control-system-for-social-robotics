{
    "name": "body_speed",
    "delay_const": 0,
    "use_delay": false,
    "inputs": {
        "mood": {
            "range": [0, 121, 1],
            "sets": {
                "very_sad": ["trapmf", [0, 0, 15, 30]],
                "sad": ["trimf", [15, 30, 45]],
                "standard": ["trimf", [30, 45, 80]],
                "happy": ["trimf", [60, 80, 100]],
                "very_happy": ["trapmf", [80, 100, 120, 120]]
            },
            "default": 50
        },
        
        "body_speed": {
            "range": [0.1, 0.9, 0.01],
            "sets": {
                "very_slow": ["trapmf", [0.1, 0.1, 0.2, 0.3]],
                "slow": ["trimf", [0.2, 0.3, 0.45]],
                "standard": ["trimf", [0.3, 0.45, 0.6]],
                "fast": ["trimf", [0.45, 0.6, 0.75]],
                "very_fast": ["trapmf", [0.6, 0.75, 0.9, 0.9]]
            },
            "default": 0.3
        }
   },
        
    "output": {
        "range": [0.1, 0.5, 0.01],
        "sets": {
            "very_slow": ["trapmf", [0.1, 0.1, 0.2, 0.3]],
            "slow": ["trimf", [0.2, 0.3, 0.45]],
            "standard": ["trimf", [0.3, 0.45, 0.6]],
            "fast": ["trimf", [0.45, 0.6, 0.75]],
            "very_fast": ["trapmf", [0.6, 0.75, 0.9, 0.9]]
            }
    },
    "rules": [
        { "if": [["mood", "very_sad"], ["body_speed", "very_slow"]], "then": "very_slow" },
        { "if": [["mood", "very_sad"], ["body_speed", "slow"]], "then": "very_slow" },
        { "if": [["mood", "very_sad"], ["body_speed", "standard"]], "then": "very_slow" },
        { "if": [["mood", "very_sad"], ["body_speed", "fast"]], "then": "slow" },
        { "if": [["mood", "very_sad"], ["body_speed", "very_fast"]], "then": "slow" },

        { "if": [["mood", "sad"], ["body_speed", "very_slow"]], "then": "very_slow" },
        { "if": [["mood", "sad"], ["body_speed", "slow"]], "then": "very_slow" },
        { "if": [["mood", "sad"], ["body_speed", "standard"]], "then": "slow" },
        { "if": [["mood", "sad"], ["body_speed", "fast"]], "then": "slow" },
        { "if": [["mood", "sad"], ["body_speed", "very_fast"]], "then": "slow" },

        { "if": [["mood", "standard"], ["body_speed", "very_slow"]], "then": "very_slow" },
        { "if": [["mood", "standard"], ["body_speed", "slow"]], "then": "slow" },
        { "if": [["mood", "standard"], ["body_speed", "standard"]], "then": "standard" },
        { "if": [["mood", "standard"], ["body_speed", "fast"]], "then": "fast" },
        { "if": [["mood", "standard"], ["body_speed", "very_fast"]], "then": "fast" },

        { "if": [["mood", "happy"], ["body_speed", "very_slow"]], "then": "slow" },
        { "if": [["mood", "happy"], ["body_speed", "slow"]], "then": "slow" },
        { "if": [["mood", "happy"], ["body_speed", "standard"]], "then": "standard" },
        { "if": [["mood", "happy"], ["body_speed", "fast"]], "then": "fast" },
        { "if": [["mood", "happy"], ["body_speed", "very_fast"]], "then": "very_fast" },

        { "if": [["mood", "very_happy"], ["body_speed", "very_slow"]], "then": "slow" },
        { "if": [["mood", "very_happy"], ["body_speed", "slow"]], "then": "standard" },
        { "if": [["mood", "very_happy"], ["body_speed", "standard"]], "then": "standard" },
        { "if": [["mood", "very_happy"], ["body_speed", "fast"]], "then": "fast" },
        { "if": [["mood", "very_happy"], ["body_speed", "very_fast"]], "then": "very_fast" }
    ],
    "mapping": [
	[0.1, 0.2, "very_slow"],
        [0.2, 0.45, "slow"],
        [0.45, 0.6, "standard"],
        [0.6, 0.75, "fast"],
        [0.75, 0.9, "very_fast"]
	]
}
